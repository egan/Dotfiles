[alias]
	amend  = commit -a --amend
	co     = checkout
	cob    = checkout -b
	dlc    = diff --cached HEAD^
	graph  = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ll     = log --pretty=oneline --abbrev-commit --all --numstat
	ls     = log --pretty=oneline --abbrev-commit --all
	ls-ign = ls-files -i --exclude--standard # Not 100% reliable.
	rm-ign = clean -fX
	sha    = rev-parse --verify HEAD
	undo   = reset HEAD~1 --mixed
