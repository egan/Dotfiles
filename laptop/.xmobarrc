--
-- ~/.xmobarrc: Haskell configuration for xmobar
--
-- vim: filetype=haskell
--
-- note: Moffet Field KNUQ; Sacramento KSMF; Davis KEDU
--
-- written: 2009 by Egan McComb
--
--

Config	{ font             = "-*-profont-*-*-*-*-10-*-*-*-*-*-iso8859-*"
        , additionalFonts  = []
        , textOffset       = -1
        , bgColor          = "#000000"
        , fgColor          = "#e5e5e5"
		, alpha            = 255
		, iconRoot         = "."
		, iconOffset       = -1
        , position         = Bottom
        , lowerOnStart     = True
        , hideOnStart      = False
        , pickBroadest     = False
        , allDesktops      = True
        , overrideRedirect = True
        , persistent       = False
        , border           = NoBorder
        , borderColor      = "#990000"
        , commands         =
                           [ Run MultiCpu
                           ["-t","CPU0:<total>% <fc=#990000>|</fc> CPU1:<total0>% <fc=#990000>|</fc> CPU2:<total1>% <fc=#990000>|</fc> CPU3:<total2>% <fc=#990000>|</fc> CPU4:<total3>%","-L","5","-H","50","-n","#00d900","-h","#e50000","-p","3","-c"," "] 10
                           , Run ThermalZone 0 ["-t","Temp: <temp>°C","-L","40","-H","70","-h","#e50000","-l","#729fcf"] 10
                           , Run Memory
                           ["-t","Mem: <used>MB,<usedratio>% <fc=#990000>|</fc> Cache: <cache>MB <fc=#990000>|</fc> Buffer: <buffer>MB","-p","3","-m","3","-c"," "] 10
                           , Run Swap ["-t","Swap: <used>MB, <usedratio>%","-p","2","-c"," "] 10
                           , Run DynNetwork
                           ["-t","Dn: <rx>kb/s <fc=#990000>|</fc> Up: <tx>kb/s","-L","0","-H","1024000","-n","#00d900","-h","#e50000","-m","6","-c"," "] 10
                           , Run CommandReader "$HOME/bin/volumed.sh" "volume"
                           , Run BatteryP ["BAT0"] ["-t","Batt: <left>%","-m","3", "--", "-l", "#e50000", "-p", "#e5e500"] 10
                           , Run Weather "KSMF"
                           ["-t","Sacramento: <tempC>°C - <rh>%","-L","15","-H","25","-n","#00d900","-h","#e50000","-l","#00a6b2"] 9000
                           , Run Date "%a, %D %T" "date" 10
                           ]
       , sepChar           = "%"
       , alignSep          = "}{"
       , template          = "%multicpu% <fc=#990000>|</fc> %thermal0% <fc=#990000>|</fc> %memory% <fc=#990000>|</fc> %swap% <fc=#990000>|</fc> %dynnetwork% <fc=#990000>|</fc> }{ <fc=#990000>|</fc> %volume% <fc=#990000>|</fc> %battery% <fc=#990000>|</fc> %KSMF% <fc=#990000>|</fc> <fc=#e5e500>%date%</fc>"
	}

